{
	"devDependencies": {
		"@types/node": "^18.0.1",
		"@typescript-eslint/eslint-plugin": "^5.48.2",
		"@typescript-eslint/parser": "^5.48.2",
		"eslint": "^8.32.0",
		"ts-node-dev": "^2.0.0",
		"typescript": "^4.9.4"
	},
	"scripts": {
		"predev": "node -v | grep 18 || (echo 'Node version 18 is required' && exit 1)",
		"dev": "ts-node-dev --quiet --clear --rs --respawn src/app.ts",
		"build": "tsc",
		"lint": "eslint src/",
		"lint:fix": "eslint --fix src/",
		"start": "node build/app.js"
	}
}
